<div class="w-4/5 h-128 p-8 text-2xl font-semibold text-center text-gray-500 dark:text-gray-400">
    <ul class="flex flex-wrap -mb-px justify-center">
        <li class="me-2">
            <a href="#" class="inline-block p-4 border-transparent rounded-t-lg text-gray-600 hover:text-blue-600 hover:border-blue-600 hover:border-opacity-100 transform hover:scale-125 transition-transform duration-300 dark:hover:text-gray-300" data-menu="CREATE">CREATE</a>
        </li>
        <li class="me-2">
            <a href="#" class="inline-block p-4 border-transparent rounded-t-lg text-gray-600 hover:text-blue-600 hover:border-blue-600 hover:border-opacity-100 transform hover:scale-125 transition-transform duration-300 dark:hover:text-gray-300" data-menu="READ">READ</a>
        </li>
        <li class="me-2">
            <a href="#" class="inline-block p-4 border-transparent rounded-t-lg text-gray-600 hover:text-blue-600 hover:border-blue-600 hover:border-opacity-100 transform hover:scale-125 transition-transform duration-300 dark:hover:text-gray-300" data-menu="UPDATE">UPDATE</a>
        </li>
        <li class="me-2">
            <a href="#" class="inline-block p-4 border-transparent rounded-t-lg text-gray-600 hover:text-blue-600 hover:border-blue-600 hover:border-opacity-100 transform hover:scale-125 transition-transform duration-300 dark:hover:text-gray-300" data-menu="DELETE">DELETE</a>
        </li>
    </ul>
    
    <div id="custom-menu" class="hidden mt-4 p-4">
        <div id="menu-content"></div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
<script>
    const links = document.querySelectorAll('li a');
    const customMenu = document.getElementById('custom-menu');
    const menuContent = document.getElementById('menu-content');
    
    links.forEach(link => {
        link.addEventListener('click', (event) => {
            event.preventDefault();
            const selectedMenu = link.getAttribute('data-menu');
            
            let message = '';
            let placeholder = '';
            let actionPage = '';

            if(selectedMenu == 'CREATE'){
                message = 'Write the new to-do';
                placeholder = 'New to-do';
                actionPage = 'create.html';
            }else if(selectedMenu == 'READ'){
                message = 'What do you want to consult?';
                placeholder = 'Consult';
                actionPage = 'read.html';
            }else if(selectedMenu == 'UPDATE'){
                message = 'What do you want to modify?';
                placeholder = 'Modify';
                actionPage = 'update.html';
            }else if(selectedMenu == 'DELETE'){
                message = 'What do you want to delete?';
                placeholder = 'Delete';
                actionPage = 'delete.html';
            }
            
            // Inserim el missatge i l'input dins el div `menuContent`
            menuContent.innerHTML = `
                <p>${message}</p>
                <form id="menu-form">
                    <input type="text" id="menu-input" class="border border-gray-300 p-2 mt-2 w-full" placeholder="${placeholder}">
                    <button type="submit" class="bg-blue-500 text-white p-2 mt-2">Submit</button>
                </form>`;
            // Mostrem el menú centrat
            customMenu.classList.remove('hidden');

            // Escoltem l'enviament del formulari
            const form = document.getElementById('menu-form');
            form.addEventListener('submit', (e) => {
                e.preventDefault(); // prevenir enviament per defecte

                // Obtenim el valor de l'input
                const inputValue = document.getElementById('menu-input').value;
                
                // Redirigim a la pàgina amb el valor introduït (passant-lo com a paràmetre si cal)
                window.location.href = `${actionPage}?input=${encodeURIComponent(inputValue)}`;
            });
        });
    });
</script>

</body>
